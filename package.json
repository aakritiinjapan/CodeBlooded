{
  "name": "codechroma",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-sensory code analysis framework with horror-themed audio-visual feedback",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build -w @codechroma/core",
    "build:lsp": "npm run build -w @codechroma/lsp-server",
    "build:cli": "npm run build -w @codechroma/cli",
    "build:vscode": "npm run build -w codechroma-vscode",
    "build:all": "npm run build:core && npm run build:lsp && npm run build:cli && npm run build:vscode",
    "watch": "npm run watch --workspaces --if-present",
    "watch:core": "npm run watch -w @codechroma/core",
    "watch:lsp": "npm run watch -w @codechroma/lsp-server",
    "watch:cli": "npm run watch -w @codechroma/cli",
    "watch:vscode": "npm run watch -w codechroma-vscode",
    "test": "jest",
    "test:all": "npm run test --workspaces --if-present",
    "test:core": "npm run test -w @codechroma/core",
    "test:lsp": "npm run test -w @codechroma/lsp-server",
    "test:cli": "npm run test -w @codechroma/cli",
    "test:vscode": "npm run test -w codechroma-vscode",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present",
    "clean:all": "npm run clean && rimraf dist node_modules/.cache"
  },
  "devDependencies": {
    "@codechroma/lsp-server": "^0.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
