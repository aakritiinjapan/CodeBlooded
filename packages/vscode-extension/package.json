{
  "name": "codechroma-vscode",
  "displayName": "CodeChroma - Kiroween",
  "description": "Multi-sensory code analysis with horror-themed audio-visual feedback",
  "version": "0.1.0",
  "publisher": "AakritiHGupta",
  "repository": {
    "type": "git",
    "url": "https://github.com/aakritiinjapan/codechroma.git",
    "directory": "packages/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/aakritiinjapan/codechroma/issues"
  },
  "homepage": "https://github.com/aakritiinjapan/codechroma#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "code-analysis",
    "complexity",
    "audio-feedback",
    "visualization",
    "horror-theme"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codechroma.toggleAudio",
        "title": "CodeChroma: Toggle Audio Feedback"
      },
      {
        "command": "codechroma.showGraph",
        "title": "CodeChroma: Show AST Graph"
      },
      {
        "command": "codechroma.resetTheme",
        "title": "CodeChroma: Reset Theme"
      },
      {
        "command": "codechroma.testAudio",
        "title": "CodeChroma: Test Audio"
      },
      {
        "command": "codechroma.showDebugInfo",
        "title": "CodeChroma: Show Debug Info"
      },
      {
        "command": "codechroma.forceUpdate",
        "title": "CodeChroma: Force Update Theme & Audio"
      },
      {
        "command": "codechroma.showAudioBridge",
        "title": "CodeChroma: Show Audio Bridge (Debug)"
      },
      {
        "command": "codechroma.testHorrorPopup",
        "title": "CodeChroma: Test Horror Popup (Preview)"
      },
      {
        "command": "codechroma.panicButton",
        "title": "CodeChroma: Panic Button (Disable All Horror)"
      },
      {
        "command": "codechroma.toggleSafeMode",
        "title": "CodeChroma: Toggle Safe Mode"
      }
    ],
    "configuration": {
      "title": "CodeChroma",
      "properties": {
        "codechroma.audio.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable audio feedback for code complexity"
        },
        "codechroma.audio.volume": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Audio volume (0-1)"
        },
        "codechroma.visual.animations": {
          "type": "boolean",
          "default": true,
          "description": "Enable horror-themed animations"
        },
        "codechroma.visual.workspaceTint": {
          "type": "boolean",
          "default": true,
          "description": "Tint the entire workbench with CodeChroma's horror palette as complexity increases"
        },
        "codechroma.analysis.threshold": {
          "type": "number",
          "default": 10,
          "description": "Complexity threshold for warnings"
        },
        "codechroma.horror.enabled": {
          "type": "boolean",
          "default": false,
          "description": "⚠️ Enable psychological horror features (jumpscares, random events). NOT recommended for users with photosensitivity, anxiety, or heart conditions."
        },
        "codechroma.horror.intensity": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "Horror intensity level (0-100). Higher values = more frequent and intense effects."
        },
        "codechroma.safety.screenSharingMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable this when screen sharing to automatically disable horror effects"
        },
        "codechroma.safety.respectReduceMotion": {
          "type": "boolean",
          "default": true,
          "description": "Respect system 'Reduce Motion' accessibility setting"
        }
      }
    },
    "keybindings": [
      {
        "command": "codechroma.panicButton",
        "key": "ctrl+shift+escape",
        "mac": "cmd+shift+escape",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "package": "vsce package",
    "publish": "npm run prepublish && vsce publish",
    "prepublish": "node scripts/prepare-publish.js",
    "clean": "rimraf dist out *.vsix"
  },
  "dependencies": {
    "@codechroma/core": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.47.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
