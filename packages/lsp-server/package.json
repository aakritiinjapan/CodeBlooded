{
  "name": "@codechroma/lsp-server",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for CodeChroma - IDE-agnostic code analysis integration",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "codechroma-lsp": "dist/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "start": "node dist/server.js",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "lsp",
    "language-server",
    "code-analysis",
    "codechroma",
    "ide-integration",
    "typescript",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codechroma/codechroma.git",
    "directory": "packages/lsp-server"
  },
  "bugs": {
    "url": "https://github.com/codechroma/codechroma/issues"
  },
  "homepage": "https://github.com/codechroma/codechroma#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@codechroma/core": "^0.1.0",
    "vscode-languageserver": "^9.0.0",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "vscode-languageserver-protocol": "^3.17.5"
  }
}
