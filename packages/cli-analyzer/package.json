{
  "name": "@codechroma/cli",
  "version": "0.1.0",
  "description": "CLI analyzer for CodeChroma - batch analysis and CI/CD integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codechroma": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b --watch",
    "test": "jest",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node -e \"try{require('./dist/cli.js')}catch(e){}\""
  },
  "keywords": [
    "code-analysis",
    "cli",
    "complexity",
    "ci-cd",
    "cyclomatic-complexity",
    "ast",
    "static-analysis"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codechroma/codechroma.git",
    "directory": "packages/cli-analyzer"
  },
  "bugs": {
    "url": "https://github.com/codechroma/codechroma/issues"
  },
  "homepage": "https://github.com/codechroma/codechroma#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@codechroma/core": "^0.1.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0"
  }
}
